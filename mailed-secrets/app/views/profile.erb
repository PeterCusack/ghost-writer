<div class="modal letter-editor">
  <%= erb :_letter_writter %>
</div>
<section class="profile">
  <div class="center">
    <div class="new-letter-show new-letter"><h3>New Letter</h3></div>

    <div class="user-name center">
      <h1><%= @current_user.full_name %></h1>
      <form action="/users/logout" method="post">
        <input type="submit" value="logout">
      </form>
    </div>

    <nav class="nav-bar">
      <ul>
        <li style="border-right: 5px solid  white">Drafts</li>
        <li id="active">Letters</li>
        <li style="border-left: 5px solid  white">Profile</li>
      </ul>
    </nav>
  </div>
  <div class="letters-container">
      <ul class="letters">
        <% current_user.letters.each do |letter_object| %>
        <li class="letter-display">
          <img src="http://www.openzambia.com/wp-content/uploads/2014/11/letter-icon.gif">
          <h3>title goes here</h3>
          <h4><%= letter_object.created_at.to_s[0..10] %></h4>
        </li>
        <% end %>
      </ul>
  </div>
</section>
